@using VoitureExpress.Models
@model IEnumerable<Voiture>

@{
    ViewData["Title"] = "Accueil";
}
<h1 style="font-size: 70px; color: #00BFFF;">Bienvenue chez Voiture Express</h1>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modele)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Annee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Finition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAchat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixDeVente)
            </th>
            <th>
                Réparations
            </th>
            <th>
                Coûts de Réparations
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixDeVente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDeVente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modele)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Annee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Finition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAchat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrixDeVente)
                </td>
                
                 <td>
                    @Html.DisplayFor(modelItem => item.Disponibilite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrixDeVente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDeVente)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

   


    

